// Debug theme with predictable, distinct colors for integration testing.
//
// This theme uses simple RGB values that are easy to identify and assert against
// in automated tests. Each UI element has a unique, memorable color value.
//
// Color Scheme:
// The theme uses a systematic approach where each color component is a multiple
// of 50 for easy identification:
//
// - Background: RGB(0, 0, 0) - pure black
// - Foreground: RGB(255, 255, 255) - pure white
// - Separator normal: RGB(100, 100, 100) - mid gray
// - Selection: RGB(0, 0, 200) - pure blue bg
// - Cursor: RGB(255, 255, 0) - pure yellow
name debug
variant dark
aliases test
priority -100
// Debug theme palette - predictable values for testing
palette {
	// Core colors
	black "#000000"
	white "#FFFFFF"
	// Grayscale
	gray-dark "#141414"
	gray-popup "#1E1E1E"
	gray-cursorline "#1E1E1E"
	gray-cursor-fg "#323232"
	gray-mid "#646464"
	gray-light "#969696"
	// Pure accent colors
	red "#FF0000"
	green "#00FF00"
	blue "#0000C8"
	yellow "#FFFF00"
	warning "#FFC800"
	// Status mode colors
	status-normal "#0064C8"
	status-insert "#00C800"
	status-goto "#C800C8"
	status-view "#C86400"
	status-command "#C8C800"
}
// Editor UI colors
ui {
	bg $black
	fg $white
	gutter-fg $gray-mid
	cursor-bg $yellow
	cursor-fg $gray-cursor-fg
	cursorline-bg $gray-cursorline
	selection-bg $blue
	selection-fg $white
	message-fg $warning
	command-input-fg $white
}
// Status bar colors
status {
	normal-bg $status-normal
	normal-fg $black
	insert-bg $status-insert
	insert-fg $black
	goto-bg $status-goto
	goto-fg $black
	view-bg $status-view
	view-fg $black
	command-bg $status-command
	command-fg $black
	dim-fg $gray-mid
	warning-fg $warning
	error-fg $red
	success-fg $green
}
// Popup and menu colors
popup {
	bg $gray-popup
	fg $white
	border $gray-light
	title $green
}
// Minimal syntax highlighting for debug theme
// Uses default foreground for most elements
syntax {
	comment fg=$gray-mid
	keyword fg=$white
	function fg=$white
	type fg=$white
	string fg=$white
	constant fg=$white
	variable fg=$white
	operator fg=$white
	punctuation fg=$white
	attribute fg=$white
	tag fg=$white
	namespace fg=$white
	constructor fg=$white
	label fg=$white
	special fg=$white
	markup {
		heading fg=$white
		bold fg=$white
		italic fg=$white
		link fg=$white
		raw fg=$white
		list fg=$white
	}
	diff {
		plus fg=$green
		minus fg=$red
		delta fg=$warning
	}
}
