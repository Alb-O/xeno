// Formatter configurations.
// Each node name is the formatter identifier, referenced in languages.kdl via `formatter`.
//
// Format:
//   formatter-name "command" { ... }   - when command differs from formatter name
//   formatter-name { ... }             - when command equals formatter name
//   formatter-name                     - simple formatter with no args
//
// Fields (in order):
//   args    - Command-line arguments
//   source  - URL to the project repository or homepage
//   nix     - Nixpkgs attribute path for the package, or #false if not available
// Bibtex
bibtex-tidy {
	args - --curly --drop-all-caps --remove-empty-fields --sort-fields "--sort=year,author,id" --strip-enclosing-braces --trailing-commas
	source "https://github.com/FlamingTempura/bibtex-tidy"
	nix bibtex-tidy
}
// Caddy
caddy {
	args fmt -
	source "https://github.com/caddyserver/caddy"
	nix caddy
}
// Crystal
crystal {
	args tool format -
	source "https://github.com/crystal-lang/crystal"
	nix crystal
}
// CUE
cue {
	args fmt -
	source "https://github.com/cue-lang/cue"
	nix cue
}
// D
dfmt {
	source "https://github.com/dlang-community/dfmt"
	nix dfmt
}
// Dhall
dhall {
	args format
	source "https://github.com/dhall-lang/dhall-haskell"
	nix dhall
}
// Dune (OCaml)
dune {
	args format-dune-file
	source "https://github.com/ocaml/dune"
	nix dune_3
}
// Fish
fish_indent {
	source "https://github.com/fish-shell/fish-shell"
	nix fish
}
// Fennel
fnlfmt {
	args -
	source "https://git.sr.ht/~technomancy/fnlfmt"
	nix fnlfmt
}
// GDScript (Godot)
gdformat {
	args -
	source "https://github.com/Scony/godot-gdscript-toolkit"
	nix gdtoolkit_4
}
// GN (Generate Ninja)
gn {
	args format --stdin
	source "https://gn.googlesource.com/gn"
	nix gn
}
// Hurl
hurlfmt {
	source "https://github.com/Orange-OpenSource/hurl"
	nix hurl
}
// Inko
inko {
	args fmt -
	source "https://github.com/inko-lang/inko"
	nix inko
}
// Janet
janet-format {
	source "https://github.com/janet-lang/spork"
	nix janet
}
// KCL
// Uses `zoo kcl fmt` command
zoo {
	args kcl fmt -
	source "https://github.com/KittyCAD/modeling-app"
	nix #false
}
// KDL
kdlfmt {
	args format -
	source "https://github.com/hougesen/kdlfmt"
	nix kdlfmt
}
// Koto
koto {
	args --format
	source "https://github.com/koto-lang/koto"
	nix koto
}
// Mojo
// Uses `pixi run mojo format` command
pixi {
	args run mojo format -q -
	source "https://github.com/prefix-dev/pixi"
	nix pixi
}
// Nix
nixfmt {
	source "https://github.com/NixOS/nixfmt"
	nix nixfmt-rfc-style
}
// Odin
odinfmt {
	args -stdin
	source "https://github.com/DanielGavin/ols"
	nix ols
}
// Prettier (Glimmer/Handlebars)
prettier {
	args --parser glimmer
	source "https://github.com/prettier/prettier"
	nix nodePackages.prettier
}
// PureScript
purs-tidy {
	args format
	source "https://github.com/natefaubion/purescript-tidy"
	// install via npm or spago
	nix #false
}
// Snakemake
snakefmt {
	args -
	source "https://github.com/snakemake/snakefmt"
	nix snakefmt
}
// Sort (generic)
sort {
	source "https://www.gnu.org/software/coreutils/"
	nix coreutils
}
// Swift
swift-format {
	source "https://github.com/apple/swift-format"
	nix swift-format
}
// TLA+
tlafmt {
	args --stdin
	source "https://github.com/tlaplus-community/tlauc"
	// install via npm
	nix #false
}
// Textproto
txtpbfmt {
	source "https://github.com/protocolbuffers/txtpbfmt"
	nix txtpbfmt
}
// YAML
yamlfmt {
	args -
	source "https://github.com/google/yamlfmt"
	nix yamlfmt
}
// Zig
zig {
	args fmt --stdin
	source "https://github.com/ziglang/zig"
	nix zig
}
